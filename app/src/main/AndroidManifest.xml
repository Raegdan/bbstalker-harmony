<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.raegdan.bbstalkerharmony" >

    android:installLocation="auto"
    android:versionCode="00001"
    android:versionName="0.0.1" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.raegdan.bbstalkerharmony.BBSHApplication"
        android:allowBackup="true"
        android:icon="@drawable/bbstalkerharmony"
        android:logo="@drawable/bbstalkerharmony_nodark"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
